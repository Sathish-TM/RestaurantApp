<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F2F4F4"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:layout_margin="0dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/action_bar_root"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gourmand's Delight"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="26sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="North Indian,Chinese,South Indian"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:background="#d3d3d3"
                android:layout_marginTop="10dp"
                android:layout_height="1dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_below="@+id/action_bar_root"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="4.3"
                    android:layout_marginLeft="4dp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="1000+ ratings"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="30 - 40 mins"
                        android:layout_marginLeft="4dp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Delivery time"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/corner_layout"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="15 % of Offer"
                    android:layout_marginLeft="10dp"
                    android:textColor="#E74C3C"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="VEG ONLY"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#757575"
                    android:layout_height="wrap_content"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="3dp"
                android:layout_margin="0dp"
                android:layout_height="600dp" >

            <ExpandableListView
                android:id="@+id/simple_expandable_listview"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:divider="#000000"
                android:dividerHeight="0.5dp" >
            </ExpandableListView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>